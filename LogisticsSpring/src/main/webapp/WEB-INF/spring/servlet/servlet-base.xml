<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd">
  	 	 <!-- internalResourceViewResolver -->
      <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/base/" />
		<property name="suffix" value=".jsp" />
	 </bean>
	<bean id="simpleUrlHandlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
	 	<property name="order" value="1" />
	 	<property name="alwaysUseFullPath" value="false"/>
	 	<property name="interceptors">
			<list> 
				<ref bean="loggerInterceptor"/> 
			</list> 
		</property>
	 	<property name="mappings">
	 		<value>
	 			/codeList.do=codeController
				/searchCodeList.do=codeController
				/checkCodeDuplication=codeController
				/batchListProcess.do=codeController
				/changeCodeUseCheckProcess.do=codeController
				/searchAddressList.do=addressController
				/imgFileUpload.do=imgFileController
				/report.html=reportController
				/openapi.do=apiExplorer
				/SendEmail.do=sendEmailController
				/convertExcel.do=excelController
				/downloadExcel.do=excelController
	 		</value>
	 	</property>
	 </bean>
	 
	 <bean id="codeController"
	 	class="com.estimulo.system.base.controller.CodeController"
	 	p:methodNameResolver-ref="parameterMethodNameResolver"
	 	p:cacheSeconds="0"
	 	p:baseServiceFacade-ref="baseServiceFacade"/>
	 <bean id="addressController"
	 	class="com.estimulo.system.base.controller.AddressController"
		p:methodNameResolver-ref="parameterMethodNameResolver"
	 	p:cacheSeconds="0"
	 	p:baseServiceFacade-ref="baseServiceFacade"/>
	 <bean id="imgFileController"
	 	class="com.estimulo.system.base.controller.ImgFileController"
	 	p:methodNameResolver-ref="parameterMethodNameResolver"
	 	p:cacheSeconds="0"/>
	 <bean id="reportController"
	 	class="com.estimulo.system.base.controller.ReportController"
	 	p:methodNameResolver-ref="parameterMethodNameResolver"
	 	p:cacheSeconds="0"
	 	p:baseServiceFacade-ref="baseServiceFacade"/>
	 <bean id="excelController"
	 	class="com.estimulo.system.base.controller.ExcelController"
	 	p:methodNameResolver-ref="parameterMethodNameResolver"
	 	p:baseServiceFacade-ref="baseServiceFacade"/>
	 <bean id="sendEmailController"
	 	class="com.estimulo.system.base.controller.SendEmailController"/>
	 <bean id="apiExplorer"
	 	class="com.estimulo.system.base.controller.ApiExplorer"/>
	 
</beans>