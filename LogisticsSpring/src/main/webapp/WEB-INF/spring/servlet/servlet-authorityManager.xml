<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">
	
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/authorityManager/" />
		<property name="suffix" value=".jsp" />
		<property name="contentType" value="text/html; charset=UTF-8" />
	</bean>
	<bean id="simpleUrlHandlerMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="1" />
		<property name="alwaysUseFullPath" value="false" />
		<property name="interceptors">
			<list> 
				<ref bean="loggerInterceptor"/> 
			</list> 
		</property>
		<property name="mappings">
			<value>
				/assignAuthorityGroup.html=urlFilenameViewController
				/assignMenuAuthority.html=urlFilenameViewController
				/getUserAuthorityGroup.do=authorityGroupController
				/getAuthorityGroup.do=authorityGroupController
				/getMenuAuthority.do=menuController
				/insertEmployeeAuthorityGroup.do=authorityGroupController
				/insertMenuAuthority.do=menuController
			</value>
		</property>
	</bean>

		
	<bean id="authorityGroupController"
		class="com.estimulo.system.authorityManager.controller.AuthorityGroupController"
		p:cacheSeconds="0" 
		p:authorityManagerServiceFacade-ref="authorityManagerServiceFacade"
		p:methodNameResolver-ref="parameterMethodNameResolver" />
		
	<bean id="menuController"
		class="com.estimulo.system.authorityManager.controller.MenuController"
		p:cacheSeconds="0" 
		p:authorityManagerServiceFacade-ref="authorityManagerServiceFacade"
		p:methodNameResolver-ref="parameterMethodNameResolver" />	
		
</beans>
