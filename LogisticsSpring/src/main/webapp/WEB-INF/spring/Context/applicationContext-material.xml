<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<!-- dao -->
	<bean id="bomDAO"
		class="com.estimulo.logistics.material.dao.BomDAOImpl" parent="iBatisDaoSupport"/>
	<bean id="orderDAO"
		class="com.estimulo.logistics.material.dao.OrderDAOImpl" parent="iBatisDaoSupport"/>
	<bean id="stockDAO"
		class="com.estimulo.logistics.material.dao.StockDAOImpl" parent="iBatisDaoSupport"/>
	
	<!-- applicationService -->
	<bean id="bomApplicationService"
		class="com.estimulo.logistics.material.applicationService.BomApplicationServiceImpl"
		p:bomDAO-ref="bomDAO" />
	<bean id="orderApplicationService"
		class="com.estimulo.logistics.material.applicationService.OrderApplicationServiceImpl"
		p:orderDAO-ref="orderDAO" />
	<bean id="stockApplicationService"
		class="com.estimulo.logistics.material.applicationService.StockApplicationServiceImpl" 
		p:stockDAO-ref="stockDAO" />
	
	<!-- serviceFacade -->
	<bean id="materialServiceFacade"
		class="com.estimulo.logistics.material.serviceFacade.MaterialServiceFacadeImpl"
		p:bomApplicationService-ref="bomApplicationService"
		p:orderApplicationService-ref="orderApplicationService"
		p:stockApplicationService-ref="stockApplicationService"/>
</beans>