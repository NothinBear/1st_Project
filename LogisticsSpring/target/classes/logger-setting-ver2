<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM
     "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<appender name="springFile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="C:/LOG/spring.log"/>
        <param name="Append" value="true"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %p [%C{10}] %m [%X{userId}]%n" />
        </layout>  
    </appender>
    
	<!-- Application Loggers -->
	<logger name="com.estimulo">
		<level value="DEBUG" />
	</logger>
	
	<!-- 3rdparty Loggers -->
<!-- 	<logger name="org.springframework.core">
		<level value="DEBUG" />
		<appender-ref ref="springFile" />
	</logger> -->
	
<!-- 	<logger name="org.springframework.beans">
		<level value="DEBUG" />
		<appender-ref ref="springFile" />
	</logger> -->
	
<!-- 	<logger name="org.springframework.context">
		<level value="DEBUG" />
		<appender-ref ref="springFile" />
	</logger> -->

<!-- 	<logger name="org.springframework.web">
		<level value="DEBUG" />
		<appender-ref ref="springFile" />
	</logger> -->

	<!-- Root Logger -->
	<root>
		<priority value="DEBUG" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>
